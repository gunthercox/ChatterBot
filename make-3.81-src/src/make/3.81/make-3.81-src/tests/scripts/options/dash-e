#                                                                    -*-perl-*-

$description = "The following test creates a makefile to ...";

$details = "";

$extraENV{GOOGLE} = 'boggle';

open(MAKEFILE,"> $makefile");

print MAKEFILE <<'EOF';
GOOGLE = bazzle
all:; @echo "$(GOOGLE)"
EOF

close(MAKEFILE);

&run_make_with_options($makefile, '-e' ,&get_logfile);

$answer = "boggle\n";

&compare_output($answer,&get_logfile(1));

1;
